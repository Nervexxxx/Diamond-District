            var body = document.body;

            // Ajoute un gestionnaire d'événements pour détecter la fin du GIF
            body.onload = function () {
                // Attends quelques secondes avant de rediriger (ajuster le délai selon votre GIF)
                setTimeout(function () {
                    // Redirige vers "html2.html" après le délai
                    window.location.href = 'html2.html';
                }, 5000); // Délai de 5 secondes (ajuster selon votre besoin)
            };
        });
